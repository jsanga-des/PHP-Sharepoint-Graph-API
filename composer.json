{
    "name": "jsanga-des/php-sharepoint-graph-api",
    "description": "PHP Client for Microsoft Graph API - SharePoint Operations",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "keywords": ["sharepoint", "microsoft-graph", "php", "api-client", "office365"],
    "authors": [
        {
            "name": "José Sánchez G.",
            "email": "jsangallego@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "SharepointClient\\": "src/"
        },
        "files": [
            "src/Utils/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "firebase/php-jwt": "^6.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "post-install-cmd": [
            "@setup-sharepoint"
        ],
        "post-update-cmd": [
            "@setup-sharepoint"
        ],
        "setup-sharepoint": [
            "php vendor/jsanga-des/php-sharepoint-graph-api/scripts/setup.php"
        ]
    }
}